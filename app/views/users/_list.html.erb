 <h1>User info</h1>
    <table>
      <tbody>
        <tr>
          
          <td>name</td>
          <td><%= current_user.name %></td>
          <td>introduction</td>
          <td><%= current_user.introduction %></td>
          
        </tr>
      </tbody>
    </table>
    <p><%= link_to 'profile', edit_user_path(current_user.id) %></p>

    <h1>New book</h1>
    <%= form_with model:book_new, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>