<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag current_user, :profile_image, :fill, 80, 80, fallback: "no_image" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@users) do %>
      <span class="btn btn-outline-secondary btn-block fas fa-user-cog"></span>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <div class="form-group">
        <%= form_with model:@book, local:true do |f| %>
          <h5>Title</h5>
          <%= f.text_field :title %>
          <h5>Opinion</h5>
          <%= f.text_area :body %>
          <p><%= f.submit 'Create Book', class:"btn btn-success" %></p>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <%= link_to user_path(@user) do %>
            <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image" %></td>
            <% end %>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>