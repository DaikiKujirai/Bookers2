<h1>User Show</h1>
<h1>User info</h1>
    <table>
      <tbody>
        <tr>

          <td>name</td>
          <td><%= @user.name %></td>
          <td>introduction</td>
          <td><%= @user.introduction %></td>
        </tr>
      </tbody>
    </table>

    <p><%= link_to 'profile', edit_user_path %></p>
    <h1>New book</h1>
    <%= form_with model:@book_new, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>

    <h1>Book detail</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to @user.name, user_path(@user.id) %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>


        </tr>
        <% end %>
      </tbody>


    </table>