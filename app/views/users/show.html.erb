<h1>User info</h1>
<p></p>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>

<p><%= link_to 'profile', user_path(current_user.id) %></p>

<h1>New book</h1>
    <%= form_with model:@book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>

    <h1>Book detail</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= @user.name %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>Edit</td>
          <td>Destroy</td>
        </tr>
        <% end %>
      </tbody>


    </table>