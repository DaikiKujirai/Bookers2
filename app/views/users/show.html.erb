<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog", <%= link_to 'profile', edit_user_path(current_user.id) %> </a>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book_new, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <p><%= f.submit 'Create Book' %></p>
        <% end %>
  </div>
        <div class="col-md-8 offset-md-1">
          <h1>Book detail</h1>
          <table class="table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image" %></td>
                <td><%= link_to @user.name, user_path(@user.id) %></td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </body>
          </table>
        </div>
      </div>
  </div>
</div>