<%= render 'list', book_new:Book.new %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image" %>
            <% end %>
            <td><%= link_to @book.title, book_path %></td>
            <td><%= @book.body %></td>
            <td><%= link_to 'Edit', edit_book_path, class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <p>CopyRight infratop.inc</p>
    </div>
  </div>
</div>