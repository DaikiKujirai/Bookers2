<!DOCTYPE html>
<html>
  <body>
    <h1>Book Show</h1>
    <h1>User info</h1>
    <table>
      <tbody>
        <tr>画像</tr>
          <th>name<th>
          <th><%= current_user.name %></th>
        <tr>
          <td>introduction</td>
          <td><%= current_user.introduction %></td>
        </tr>
      </tbody>
    </table>


    <h1>New book</h1>
    <%= form_with model:@book_new, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>

    <h1>Book detail</h1>
    <table>
      <tbody>
        <tr>
          <%= link_to user_path(current_user.id) do %>
          <%= @user.name %>
          <% end %>
          <%= link_to book_path do %>
          <%= @book.title %>
          <% end %>
          <td><%= @book.body %></td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
