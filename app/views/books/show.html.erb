<!DOCTYPE html>
<html>
  <body>

    <h1>User info</h1>
    <table>
      <tbody>
        <tr>画像</tr>
          <th>name<th>
          <th><%= current_user.name %></th>
        <tr>
          <td>introduction</td>
          <td><%= current_user.introduction %></td>
        </tr>
      </tbody>


    <h1>New book</h1>
    <%= form_with model:@book_new, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>

    <h1>Book detail</h1>
    <table>
      <tbody>
        <% @book.each do |book| %>
        <tr>
          <td><%= @user.name %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>

      </tbody>
    </table>
  </body>
</html>
