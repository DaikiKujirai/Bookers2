<!DOCTYPE html>
<html>
  <body>
    <%= render 'list', book_new:Book.new %>
    <h1>Book detail</h1>
    <table>
      <tbody>
        <tr>
          <td><%= link_to user_path(@user.id) do %>
          <td><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image" %></td>
          <% end %>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
          <td><%= link_to 'Edit', edit_book_path %></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
