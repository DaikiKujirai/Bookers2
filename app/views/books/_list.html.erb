<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag current_user, :profile_image, :fill, 80, 80, fallback: "no_image" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name<th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog", <%= link_to "", edit_user_path(current_user.id) %></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <div class="form-group">
        <%= form_with model:book_new, local:true do |f| %>
          <h5>Title</h5>
          <%= f.text_field :title %>
          <h5>Opinion</h5>
          <%= f.text_area :body %>
          <p><%= f.submit 'Create Book', class:"btn btn-success" %></p>
        <% end %>
      </div>
    </div>
