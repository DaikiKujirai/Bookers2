<!DOCTYPE html>
<html>
  <body>

    <h1>Book index</h1>
    <h1>User info</h1>
    <p>name</p>
    <p>introduction</p>

    <p><%= link_to 'profile', edit_user_path(current_user.id) %></p>


    <h1>New book</h1>
    <%= form_with model:@book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>

    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.user_id %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </thead>
    </table>



  </body>
</html>