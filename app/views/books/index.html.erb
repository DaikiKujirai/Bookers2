<!DOCTYPE html>
<html>
  <body>

    <h1>Books index</h1>
    <%= render 'list', book_new:Book.new %>

    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <%= link_to user_path(@user) do %>
          <td><%= attachment_image_tag @book.user_id, :profile_image, :fill, 60, 60, fallback: "no_image" %></td>
          <% end %>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>



  </body>
</html>