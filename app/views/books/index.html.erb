<div class="container px-5 px-sm-0">
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag current_user, :profile_image, :fill, 80, 80, fallback: "no_image" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name<th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog", <%= link_to "", edit_user_path(current_user.id) %></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <div class="form-group">
        <%= form_with model:@book, local:true do |f| %>
          <h5>Title</h5>
          <%= f.text_field :title %>
          <h5>Opinion</h5>
          <%= f.text_area :body %>
          <p><%= f.submit 'Create Book', class:"btn btn-success" %></p>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <%= link_to user_path(@user) do %>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image" %></td>
            <% end %>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
