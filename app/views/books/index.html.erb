<%= render 'list', book_new:Book.new %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <%= link_to user_path(@user) do %>
            <td><%= attachment_image_tag @book.user_id, :profile_image, :fill, 60, 60, fallback: "no_image" %></td>
            <% end %>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <p>CopyRight infratop.inc</p>
    </div>
  </div>
</div>