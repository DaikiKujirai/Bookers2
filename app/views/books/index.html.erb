<!DOCTYPE html>
<html>
  <body>

    <h1>Books index</h1>
    <%= render 'list', book_new:Book.new %>

    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.user_id %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>



  </body>
</html>