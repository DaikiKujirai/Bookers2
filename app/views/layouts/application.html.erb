
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand text-light" href="/">Bookers</a>
          <div class="col-lg-8">
            <div class="text-right">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                <li class="fas fa-home nav-link"><%= link_to "Home", user_path(current_user) %></li>
                <li class="fas fa-users nav-link"><%= link_to "Users", users_path %></li>
                <li class="fas fa-book-open nav-link"><%= link_to "Books", books_path %></li>
                <li class="fas fa-sign-out-alt nav-link"><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
                <% else %>
                <li class="fas fa-home nav-link"><%= link_to "Home", root_path %></li>
                <li class="fas fa-link nav-link"><a href="about">About</a></li>
                <li class="fas fa-user-plus nav-link"><%= link_to "sign up", new_user_registration_path %></li>
                <li class="fas fa-sign-in-alt nav-link"><%= link_to "login", new_user_session_path %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </header>
  <main>
  <p><%= flash[:notice] %></p>
  </main>
  <%= yield %>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>
