
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <div class="row">
          <div class="col-lg-4">
            <a class="navbar-brand" href="/">Bookers</a>
          </div>
          <div class="col-lg-8">
            <div class="text-right">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                <li class="fas fa-home nav-link text-light"><%= link_to "Home", user_path(current_user) %></li>
                <li class="fas fa-users nav-link text-light"><%= link_to "Users", users_path %></li>
                <li class="fas fa-book-open nav-link text-light"><%= link_to "Books", books_path %></li>
                <li class="fas fa-sign-out-alt nav-link text-light"><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
                <% else %>
                <li><%= link_to "Home", root_path %></li>
                <li><a href="about">About</a></li>
                <li><%= link_to "sign up", new_user_registration_path %></li>
                <li><%= link_to "login", new_user_session_path %></li>
              </ul>
            </div>
          </div>
          <% end %>
    </nav>
    <%= yield %>



  </body>
</html>
